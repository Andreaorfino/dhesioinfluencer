<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <h1 class="title">Your Favorite Lottery</h1>
            <% if (products.length > 0) { %>
                <ul class="cart__item-list">
                    <% products.forEach(p => { %>
                        <li class="cart__item">
                            <h1><%= p.productId.title %></h1>
                            <div >
                            <a href="/products/<%= p.productId._id %>" class="btn">Details</a>
                            
                            <form action="/delete-favorite" method="POST">
                                <input type="hidden" value="<%= p.productId._id %>" name="productId">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn danger" type="submit">Unlove</button>
                            </form>
                        </div>
                        </li>
                    <% }) %>
                </ul>
                <hr>
                <div class="centered">
                    <!--<form action="/create-order" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn">Order Now!</button>
                    </form>-->
                    
                </div>
                
            <% } else { %>
                <h1>No Favorite Lottery!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>